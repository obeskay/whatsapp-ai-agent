# Evolution API Configuration
EVOLUTION_API_URL=http://localhost:8080
EVOLUTION_API_KEY=your-evolution-api-key
EVOLUTION_INSTANCE_NAME=ai-agent

# OpenAI Configuration (for chat + voice features)
OPENAI_API_KEY=your-openai-api-key
OPENAI_MODEL=gpt-5-mini
WHISPER_MODEL=whisper-1
TTS_MODEL=tts-1
TTS_VOICE=nova

# OpenRouter Configuration (for chat only - voice requires OpenAI)
# Recommended for WhatsApp (fast + cheap + function calling):
# - mistralai/mistral-small-3 (BEST: ultra-low latency, function calling, $0.20/$0.60 per 1M)
# - openai/gpt-5-mini (fast, reliable, excellent value)
# - deepseek/deepseek-r1-distill-qwen-32b (open source, great reasoning, cheap)
# - meta-llama/llama-3.1-70b (128K context for long chats, open source)
OPENROUTER_API_KEY=your-openrouter-api-key
OPENROUTER_MODEL=mistralai/mistral-small-3
USE_OPENROUTER=false

# Agent Configuration
AGENT_NAME=AI Assistant
AGENT_PERSONALITY=helpful, friendly, professional
AGENT_LANGUAGE=en
ENABLE_VOICE=true
AUTO_TRANSCRIBE=true

# Server Configuration
PORT=3003
DASHBOARD_PORT=3004
NODE_ENV=development

# Webhook Configuration
WEBHOOK_URL=http://localhost:3003/webhook
WEBHOOK_SECRET=your-webhook-secret

# Session Configuration
SESSION_TIMEOUT=3600000
MAX_MESSAGES_HISTORY=50
ENABLE_GROUP_CHAT=true

# Rate Limiting
MAX_MESSAGES_PER_MINUTE=20
MAX_VOICE_MESSAGES_PER_MINUTE=5

# OPTIMIZATION SETTINGS (New)
# Response caching
CACHE_TTL=300000                 # Cache responses for 5 minutes (300000ms)
ENABLE_CACHE=true                # Enable response caching

# Message batching
BATCH_TIMEOUT=2000               # Batch messages within 2 seconds
MAX_BATCH_SIZE=5                 # Maximum messages per batch

# Function calling
ENABLE_FUNCTIONS=true            # Enable AI function calling capabilities

# Token optimization
COMPRESS_PROMPTS=true            # Enable prompt compression
MAX_HISTORY_TOKENS=1500          # Maximum tokens for conversation history
MAX_SYSTEM_PROMPT_TOKENS=150    # Maximum tokens for system prompt

# Performance tuning
ENABLE_STREAMING=true            # Enable streaming responses for faster UX
RETRY_MAX_ATTEMPTS=3             # Maximum retry attempts for failed API calls
RETRY_INITIAL_DELAY=1000         # Initial retry delay in ms (exponential backoff)